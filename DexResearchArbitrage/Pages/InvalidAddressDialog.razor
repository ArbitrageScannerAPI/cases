@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudPaper Class="pa-8" Style="min-height:200px; min-width:400px; display:flex; align-items:center; justify-content:center;">
            <MudText Typo="Typo.h5" Color="Color.Error" Align="Align.Center">@Message</MudText>
        </MudPaper>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public string Message { get; set; } = "Invalid Solana address";
}
