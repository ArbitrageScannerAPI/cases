    private async void OnRefreshTvlClicked()
{
    if (selectedNetwork != Network.Solana)
        return;

    filters.MinTvlUsd = 0;

    if (filters.SecondTokenAddresses.Count == 0)
    {
        await DialogService.ShowMessageBox(
            "Warning",
            "To refresh TVL, please apply the Second Token filter and select at least one of wSOL, USDT or USDC.",
            yesText: "OK");
        return;
    }

    if (filteredPools.Count == 0 || filteredPools.Count == allPools.Count)
    {
        await DialogService.ShowMessageBox(
            "Warning",
            "Second Token filter is not applied to the table. Click 'Apply' in filters and try again.",
            yesText: "OK");
        return;
    }

    var selectedAddresses = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
    foreach (var selected in filters.SecondTokenAddresses)
    {
        foreach (var kvp in _predefinedSolanaSecondTokens)
        {
            var addr = kvp.Key;
            var symbol = kvp.Value;
            if (selected.StartsWith(symbol + " ", StringComparison.OrdinalIgnoreCase))
                selectedAddresses.Add(addr);
        }
    }
    if (selectedAddresses.Count == 0)
    {
        await DialogService.ShowMessageBox(
            "Warning",
            "Unable to resolve selected Second Token filters. Please reselect them.",
            yesText: "OK");
        return;
    }

    // Включаем кружки для ВСЕХ видимых пулов
    foreach (var pool in filteredPools)
    {
        pool.IsTvlLoading = true;
        pool.TvlUsd = 0; // можно сбросить старое значение
    }
    StateHasChanged();

    try
    {
        foreach (var pool in filteredPools)
        {
            try
            {
                if (!selectedAddresses.Contains(pool.SecondTokenAddress))
                {
                    pool.TvlUsd = 0;
                    pool.IsTvlLoading = false;
                    StateHasChanged();
                    continue;
                }

                var balances = await BalancesService.GetAddressTokensBalanceAsync(pool.PoolAddress, 20);
                if (balances == null || balances.Data.Count == 0)
                {
                    pool.TvlUsd = 0;
                    pool.IsTvlLoading = false;
                    StateHasChanged();
                    continue;
                }

                var match = balances.Data.FirstOrDefault(x =>
                    x.TokenAddress.Equals(pool.SecondTokenAddress, StringComparison.OrdinalIgnoreCase));

                if (match?.AmountUsd is decimal amountUsd)
                    pool.TvlUsd = 2.0m * amountUsd;
                else
                    pool.TvlUsd = 0;

                // Готово для этого пула: убираем кружок и сразу обновляем UI
                pool.IsTvlLoading = false;
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"[TVL] Error recalculating for pool {pool.PoolAddress}: {ex.Message}");
                pool.TvlUsd = 0;
                pool.IsTvlLoading = false;
                StateHasChanged();
            }
        }
    }
    finally
    {
        // Ничего глобально не выключаем — все строки сами сняли IsTvlLoading = false
    }
}


    private async void OnRefreshSwapsClicked()
    {
    // Allow refresh only when TVL filter is set to at least 10 000 USD
    if (filters.MinTvlUsd < 10000m)
    {
        await DialogService.ShowMessageBox(
            "Warning",
            "To refresh Swaps Count, please set TVL filter to at least 10,000 USD.",
            yesText: "OK");
        Console.WriteLine("Swaps refresh blocked: MinTvlUsd < 10000.");
        return;
    }

    // TODO: implement swaps statistics refresh logic here (API calls, updates of CountSwaps, etc.)
    Console.WriteLine("Swaps Count refresh started (TVL filter >= 10000).");
   }

    private void OnRefreshArbitrationClicked()
    {
        // TODO: Implement arbitration flag / price diff refresh logic.
        Console.WriteLine("Arbitration refresh clicked");
    }

    private string SelectedRowStyleFunc(PoolInfo pool, int rowNumber)
    {
        if (selectedPool != null && selectedPool.PoolAddress == pool.PoolAddress)
        {
            return "background-color: #E3F2FD;";
        }
        return string.Empty;
    }

    private string TruncateAddress(string address)
    {
        if (string.IsNullOrEmpty(address) || address.Length <= 12)
            return address;

        return $"{address[..6]}...{address[^4..]}";
    }
}
