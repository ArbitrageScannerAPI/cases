    private async void OnRefreshTvlClicked()
    {
        if (selectedNetwork != Network.Solana)
            return;

        filters.MinTvlUsd = 0;

        if (filters.SecondTokenAddresses.Count == 0)
        {
            await DialogService.ShowMessageBox(
                "Warning",
                "To refresh TVL, please apply the Second Token filter and select at least one of wSOL, USDT or USDC.",
                yesText: "OK");
            return;
        }

        if (filteredPools.Count == 0 || filteredPools.Count == allPools.Count)
        {
            await DialogService.ShowMessageBox(
                "Warning",
                "Second Token filter is not applied to the table. Click 'Apply' in filters and try again.",
                yesText: "OK");
            return;
        }

        var selectedAddresses = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
        foreach (var selected in filters.SecondTokenAddresses)
        {
            foreach (var kvp in _predefinedSolanaSecondTokens)
            {
                var addr = kvp.Key;
                var symbol = kvp.Value;
                if (selected.StartsWith(symbol + " ", StringComparison.OrdinalIgnoreCase))
                    selectedAddresses.Add(addr);
            }
        }
        if (selectedAddresses.Count == 0)
        {
            await DialogService.ShowMessageBox(
                "Warning",
                "Unable to resolve selected Second Token filters. Please reselect them.",
                yesText: "OK");
            return;
        }

        // Turn on spinners for ALL visible pools
        foreach (var pool in filteredPools)
        {
            pool.IsTvlLoading = true;
            pool.TvlUsd = 0; // reset old value
        }
        StateHasChanged();

        try
        {
            foreach (var pool in filteredPools)
            {
                try
                {
                    if (!selectedAddresses.Contains(pool.SecondTokenAddress))
                    {
                        pool.TvlUsd = 0;
                        pool.IsTvlLoading = false;
                        StateHasChanged();
                        continue;
                    }

                    var balances = await BalancesService.GetAddressTokensBalanceAsync(pool.PoolAddress, 20);
                    if (balances == null || balances.Data.Count == 0)
                    {
                        pool.TvlUsd = 0;
                        pool.IsTvlLoading = false;
                        StateHasChanged();
                        continue;
                    }

                    var match = balances.Data.FirstOrDefault(x =>
                        x.TokenAddress.Equals(pool.SecondTokenAddress, StringComparison.OrdinalIgnoreCase));

                    if (match?.AmountUsd is decimal amountUsd)
                        pool.TvlUsd = 2.0m * amountUsd;
                    else
                        pool.TvlUsd = 0;

                    // Done for this pool: remove spinner and update UI immediately
                    pool.IsTvlLoading = false;
                    StateHasChanged();
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"[TVL] Error recalculating for pool {pool.PoolAddress}: {ex.Message}");
                    pool.TvlUsd = 0;
                    pool.IsTvlLoading = false;
                    StateHasChanged();
                }
            }
        }
        finally
        {
            // Do not disable globally - pools handle their own state
        }
    }


    private async void OnRefreshSwapsClicked()
    {
        // 1. Validation checks
        if (filters.MinTvlUsd < 1000m)
        {
            await DialogService.ShowMessageBox(
                "Warning",
                "To refresh Swaps Count, please set TVL filter to at least 1,000 USD.",
                yesText: "OK");
            Console.WriteLine("Swaps refresh blocked: MinTvlUsd < 1000.");
            return;
        }

        if (filteredPools.Count == 0)
        {
            await DialogService.ShowMessageBox(
                "Warning",
                "There are no pools in the table to refresh swaps count.",
                yesText: "OK");
            Console.WriteLine("Swaps refresh blocked: filteredPools is empty.");
            return;
        }

        var fromDate = filters.SwapsFromDate;

        // 2. Reset UI state for all visible pools immediately
        foreach (var pool in filteredPools)
        {
            pool.IsSwapsLoading = true;
            pool.CountSwaps = 0;
            pool.ArbitrationPriceUsd = 0;
            pool.PriceHistory.Clear();
        }
        StateHasChanged(); // Show spinners for everyone

        // 3. Pre-load wSOL price history once (needed for calculations)
        await BuildWsolUsdPriceHistoryAsync(fromDate);

        // 4. Parallel Execution with Ordered UI Updates
        // We use SemaphoreSlim to limit network concurrency (e.g., max 5 requests at once).
        using var semaphore = new SemaphoreSlim(5);

        // Create a list of "hot" tasks. They start executing immediately upon creation.
        // However, we do NOT await them here yet.
        var runningTasks = filteredPools.Select(async pool =>
        {
            // Wait for our turn in the semaphore (throttling)
            await semaphore.WaitAsync();
            try
            {
                // Perform the heavy lifting (API call + calculations).
                // This method updates the 'pool' object internally but DOES NOT trigger UI updates.
                await ProcessPoolSwapsAsync(pool, fromDate);
            }
            finally
            {
                semaphore.Release();
            }
        }).ToList(); // .ToList() forces the query to execute and tasks to start.

        // 5. Sequential UI Update Loop
        // We iterate through the tasks in the exact order of the table rows.
        foreach (var task in runningTasks)
        {
            // Wait for the specific task to complete.
            // If a later task (e.g., #5) finishes before #1, it will sit here and wait
            // until we reach it in the loop. This guarantees sequential top-to-bottom rendering.
            await task;

            // Once the task for the current row is done, refresh the UI.
            // Users will see rows unlocking one by one: 1 -> 2 -> 3...
            StateHasChanged();
        }

        // Final refresh to ensure everything is consistent
        StateHasChanged();
    }

                private async Task ProcessPoolSwapsAsync(PoolInfo pool, DateTime? fromDate)
    {
        // Local function to fetch data with retries using dynamic return type
        async Task<dynamic?> FetchSwapsWithRetry()
        {
            const int MaxRetries = 3;
            for (int i = 0; i < MaxRetries; i++)
            {
                try
                {
                    var res = await SwapsService.GetPoolSwapsAsync(pool.PoolAddress, 10000);
                    
                    if (res != null && res.Data != null)
                    {
                        return res.Data; 
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Attempt {i+1} failed for {pool.PoolAddress}: {ex.Message}");
                    if (i == MaxRetries - 1) throw;
                    await Task.Delay(1000 * (i + 1));
                }
            }
            return null;
        }

        try
        {
            var from = fromDate?.Date ?? DateTime.MinValue;
            var to = DateTime.UtcNow;

            dynamic? swapsData = await FetchSwapsWithRetry();

            // Null check before accessing Count
            if (swapsData == null)
            {
                pool.CountSwaps = 0;
                pool.ArbitrationPriceUsd = 0;
                pool.IsSwapsLoading = false;
                return;
            }

            // Safe count check for dynamic list
            // We use a try-catch block or explicit check if we knew the type,
            // but for dynamic, simple property access is standard.
            // To silence CS8602, we can rely on the null check above.
            if (swapsData.Count == 0)
            {
                pool.CountSwaps = 0;
                pool.ArbitrationPriceUsd = 0;
                pool.IsSwapsLoading = false;
                return;
            }

            var firstTokenAddress = validatedToken?.TokenAddress ?? string.Empty;
            var secondTokenAddress = pool.SecondTokenAddress;
            
            int diffIndex = 0;
            int minLen = Math.Min(firstTokenAddress.Length, secondTokenAddress.Length);
            while (diffIndex < minLen &&
                   firstTokenAddress[diffIndex] == secondTokenAddress[diffIndex])
            {
                diffIndex++;
            }
            
            int priceCalculationType = 0;
             if (secondTokenAddress == "EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v" || 
                secondTokenAddress == "Es9vMFrzaCERmJfrF4H2FYD4KCoNkY11McCe8BenwNYB")
            {
                priceCalculationType = 1; 
            }
            else if (secondTokenAddress == "So11111111111111111111111111111111111111112")
            {
                priceCalculationType = 2; 
            }

            var pricePoints = new List<SwapPricePoint>();
            int countInRange = 0;

            foreach (var s in swapsData)
            {
                // Ensure s is not null (though unlikely in a list)
                if (s == null) continue;

                // Use explicit DateTime cast
                DateTime ts = s.Timestamp;

                if (ts < from || ts > to)
                    continue;

                countInRange++;

                if (priceCalculationType == 0)
                    continue;

                decimal? priceFirstPerSecond = null;
                
                string? sFrom = s.FromTokenAddress; 
                // Null check for address string
                if (string.IsNullOrEmpty(sFrom)) continue;

                bool fromIsFirst = sFrom[diffIndex] == firstTokenAddress[diffIndex];

                decimal sFromAmt = s.FromTokenAmount;
                decimal sToAmt = s.ToTokenAmount;

                if (fromIsFirst && sFromAmt > 0)
                {
                    priceFirstPerSecond = sToAmt / sFromAmt;
                }
                else if (!fromIsFirst && sToAmt > 0)
                {
                    priceFirstPerSecond = sFromAmt / sToAmt;
                }

                if (!priceFirstPerSecond.HasValue)
                    continue;

                decimal priceUsd = 0;

                if (priceCalculationType == 1)
                {
                    priceUsd = priceFirstPerSecond.Value;
                }
                else
                {
                    var wsolUsd = GetClosestWsolUsdPrice(ts);
                    
                    if (!wsolUsd.HasValue)
                        continue;

                    priceUsd = priceFirstPerSecond.Value * wsolUsd.Value;
                }

                pricePoints.Add(new SwapPricePoint
                {
                    Timestamp = ts,
                    Price = priceUsd
                });
            }

            pool.CountSwaps = countInRange;
            pool.PriceHistory = pricePoints
                .OrderBy(p => p.Timestamp)
                .ToList();

            var latest = pool.PriceHistory
                .OrderByDescending(p => p.Timestamp)
                .FirstOrDefault();
            pool.ArbitrationPriceUsd = latest?.Price ?? 0;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Swaps] Final error for {pool.PoolAddress}: {ex.Message}");
            pool.CountSwaps = 0;
            pool.ArbitrationPriceUsd = 0;
        }
        finally
        {
            pool.IsSwapsLoading = false;
        }
    }


    private async Task BuildWsolUsdPriceHistoryAsync(DateTime? fromDate)
    {
        // Clear previous history
        _wsolUsdPriceHistory.Clear();

        // Fetch swaps for the wSOL-USDC reference pool
        var response = await SwapsService.GetPoolSwapsAsync(WsolUsdcPoolAddress, 10000);
        if (response == null || response.Data.Count == 0)
