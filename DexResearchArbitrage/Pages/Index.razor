    private async void OnRefreshTvlClicked()
{
    if (selectedNetwork != Network.Solana)
        return;

    filters.MinTvlUsd = 0;

    if (filters.SecondTokenAddresses.Count == 0)
    {
        await DialogService.ShowMessageBox(
            "Warning",
            "To refresh TVL, please apply the Second Token filter and select at least one of wSOL, USDT or USDC.",
            yesText: "OK");
        return;
    }

    if (filteredPools.Count == 0 || filteredPools.Count == allPools.Count)
    {
        await DialogService.ShowMessageBox(
            "Warning",
            "Second Token filter is not applied to the table. Click 'Apply' in filters and try again.",
            yesText: "OK");
        return;
    }

    var selectedAddresses = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
    foreach (var selected in filters.SecondTokenAddresses)
    {
        foreach (var kvp in _predefinedSolanaSecondTokens)
        {
            var addr = kvp.Key;
            var symbol = kvp.Value;
            if (selected.StartsWith(symbol + " ", StringComparison.OrdinalIgnoreCase))
                selectedAddresses.Add(addr);
        }
    }
    if (selectedAddresses.Count == 0)
    {
        await DialogService.ShowMessageBox(
            "Warning",
            "Unable to resolve selected Second Token filters. Please reselect them.",
            yesText: "OK");
        return;
    }

    // Включаем кружки для ВСЕХ видимых пулов
    foreach (var pool in filteredPools)
    {
        pool.IsTvlLoading = true;
        pool.TvlUsd = 0; // можно сбросить старое значение
    }
    StateHasChanged();

    try
    {
        foreach (var pool in filteredPools)
        {
            try
            {
                if (!selectedAddresses.Contains(pool.SecondTokenAddress))
                {
                    pool.TvlUsd = 0;
                    pool.IsTvlLoading = false;
                    StateHasChanged();
                    continue;
                }

                var balances = await BalancesService.GetAddressTokensBalanceAsync(pool.PoolAddress, 20);
                if (balances == null || balances.Data.Count == 0)
                {
                    pool.TvlUsd = 0;
                    pool.IsTvlLoading = false;
                    StateHasChanged();
                    continue;
                }

                var match = balances.Data.FirstOrDefault(x =>
                    x.TokenAddress.Equals(pool.SecondTokenAddress, StringComparison.OrdinalIgnoreCase));

                if (match?.AmountUsd is decimal amountUsd)
                    pool.TvlUsd = 2.0m * amountUsd;
                else
                    pool.TvlUsd = 0;

                // Готово для этого пула: убираем кружок и сразу обновляем UI
                pool.IsTvlLoading = false;
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"[TVL] Error recalculating for pool {pool.PoolAddress}: {ex.Message}");
                pool.TvlUsd = 0;
                pool.IsTvlLoading = false;
                StateHasChanged();
            }
        }
    }
    finally
    {
        // Ничего глобально не выключаем — все строки сами сняли IsTvlLoading = false
    }
}


    private async void OnRefreshSwapsClicked()
{
    // TVL condition: at least 1,000 USD
    if (filters.MinTvlUsd < 1000m)
    {
        await DialogService.ShowMessageBox(
            "Warning",
            "To refresh Swaps Count, please set TVL filter to at least 1,000 USD.",
            yesText: "OK");
        Console.WriteLine("Swaps refresh blocked: MinTvlUsd < 1000.");
        return;
    }

    if (filteredPools.Count == 0)
    {
        await DialogService.ShowMessageBox(
            "Warning",
            "There are no pools in the table to refresh swaps count.",
            yesText: "OK");
        Console.WriteLine("Swaps refresh blocked: filteredPools is empty.");
        return;
    }

    var fromDate = filters.SwapsFromDate;

    // 4 debug count swops
    // Console.WriteLine($"[Swaps] Global fromDate filter = {fromDate?.ToString("O") ?? "null"}");

    // Start spinners for visible pools
    foreach (var pool in filteredPools)
    {
        pool.IsSwapsLoading = true;
        pool.CountSwaps = 0;
        pool.ArbitrationPriceUsd = 0;
        pool.PriceHistory.Clear();
    }
    StateHasChanged();

    await BuildWsolUsdPriceHistoryAsync(fromDate);

    var from = fromDate?.Date ?? DateTime.MinValue;
    var to = DateTime.UtcNow;

    foreach (var pool in filteredPools)
    {
        try
        {
            var swaps = await SwapsService.GetPoolSwapsAsync(pool.PoolAddress, 10000);
            if (swaps == null || swaps.Data.Count == 0)
            {
                pool.CountSwaps = 0;
                pool.ArbitrationPriceUsd = 0;
                pool.IsSwapsLoading = false;
                StateHasChanged();
                continue;
            }

            var firstTokenAddress  = validatedToken?.TokenAddress ?? string.Empty;
            var secondTokenAddress = pool.SecondTokenAddress;

            // 4 debug count swops
            //Console.WriteLine($"[Swaps] Pool={pool.PoolAddress}");
            //Console.WriteLine($"[Swaps] firstTokenAddress={firstTokenAddress}");
            //Console.WriteLine($"[Swaps] secondTokenAddress={secondTokenAddress}");
            //Console.WriteLine($"[Swaps] total swaps from API = {swaps.Data.Count}");

            var pricePoints = new List<SwapPricePoint>();
            int countInRange = 0;
            int processed = 0;

            foreach (var s in swaps.Data)
            {
                processed++;

                if (s.Timestamp < from || s.Timestamp > to)
                    continue;

                countInRange++;

                // 4 debug count swops
                //Console.WriteLine($"[Swaps] ts={s.Timestamp:O}, from={s.FromTokenAddress}, to={s.ToTokenAddress}");

                decimal? priceFirstPerSecond = null;

                // Case A: from = first, to = second
                if (string.Equals(s.FromTokenAddress, firstTokenAddress, StringComparison.OrdinalIgnoreCase) &&
                    string.Equals(s.ToTokenAddress,   secondTokenAddress, StringComparison.OrdinalIgnoreCase) &&
                    s.FromTokenAmount > 0)
                {
                    priceFirstPerSecond = s.ToTokenAmount / s.FromTokenAmount;
                }
                // Case B: from = second, to = first
                else if (string.Equals(s.FromTokenAddress, secondTokenAddress, StringComparison.OrdinalIgnoreCase) &&
                         string.Equals(s.ToTokenAddress,   firstTokenAddress, StringComparison.OrdinalIgnoreCase) &&
                         s.ToTokenAmount > 0)
                {
                    priceFirstPerSecond = s.FromTokenAmount / s.ToTokenAmount;
                }

                // 4 debug count swops
                if (priceFirstPerSecond.HasValue)
                {
                    Console.WriteLine($"[Swaps] matched swap, priceFirstPerSecond={priceFirstPerSecond.Value}");
                }
                else
                {
                    Console.WriteLine("[Swaps] swap did not match token pair, skipping price calculation");

                    // Yield to UI periodically even when price is not calculated
                    if (processed % 1000 == 0)
                        await Task.Yield();

                    continue;
                }

                decimal priceUsd;

                if (string.Equals(secondTokenAddress, "EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v", StringComparison.OrdinalIgnoreCase) || // USDC
                    string.Equals(secondTokenAddress, "Es9vMFrzaCERmJfrF4H2FYD4KCoNkY11McCe8BenwNYB", StringComparison.OrdinalIgnoreCase))   // USDT
                {
                    priceUsd = priceFirstPerSecond.Value;
                }
                else if (string.Equals(secondTokenAddress, "So11111111111111111111111111111111111111112", StringComparison.OrdinalIgnoreCase))
                {
                    var wsolUsd = GetClosestWsolUsdPrice(s.Timestamp);
                    if (!wsolUsd.HasValue)
                    {
                        Console.WriteLine("[Swaps] no wSOL-USD price found for this timestamp, skipping");

                        if (processed % 1000 == 0)
                            await Task.Yield();

                        continue;
                    }

                    priceUsd = priceFirstPerSecond.Value * wsolUsd.Value;
                }
                else
                {
                    Console.WriteLine("[Swaps] second token is not USDC/USDT/wSOL, skipping price calculation");

                    if (processed % 1000 == 0)
                        await Task.Yield();

                    continue;
                }

                pricePoints.Add(new SwapPricePoint
                {
                    Timestamp = s.Timestamp,
                    Price = priceUsd
                });

                // Yield control to UI every 1000 processed swaps
                if (processed % 1000 == 0)
                {
                    await Task.Yield();
                }
            }

            // 4 debug count swops
            // Console.WriteLine($"[Swaps] countInRange={countInRange}, pricePoints={pricePoints.Count}");

            pool.CountSwaps = countInRange;
            pool.PriceHistory = pricePoints
                .OrderBy(p => p.Timestamp)
                .ToList();

            var latest = pool.PriceHistory.OrderByDescending(p => p.Timestamp).FirstOrDefault();
            pool.ArbitrationPriceUsd = latest?.Price ?? 0;

            pool.IsSwapsLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Swaps] Error recalculating for pool {pool.PoolAddress}: {ex.Message}");
            pool.CountSwaps = 0;
            pool.ArbitrationPriceUsd = 0;
            pool.IsSwapsLoading = false;
            StateHasChanged();
        }
    }
}




private async Task BuildWsolUsdPriceHistoryAsync(DateTime? fromDate)
