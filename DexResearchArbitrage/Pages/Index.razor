    _wsolUsdPriceHistory.Clear();

    var response = await SwapsService.GetPoolSwapsAsync(WsolUsdcPoolAddress, 10000);
    if (response == null || response.Data.Count == 0)
        return;

    var from = fromDate?.Date ?? DateTime.MinValue;
    var to = DateTime.UtcNow;

    foreach (var s in response.Data)
    {
        if (s.Timestamp < from || s.Timestamp > to)
            continue;

        // In this special pool we know it is wSOL-USDC.
        // Price of wSOL in USD = amount_USDC / amount_wSOL.

        decimal? price = null;

        // Case 1: from = wSOL, to = USDC
        if (string.Equals(s.FromTokenAddress, "So11111111111111111111111111111111111111112", StringComparison.OrdinalIgnoreCase) &&
            string.Equals(s.ToTokenAddress,  "EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v", StringComparison.OrdinalIgnoreCase) &&
            s.FromTokenAmount > 0)
        {
            price = s.ToTokenAmount / s.FromTokenAmount;
        }
        // Case 2: from = USDC, to = wSOL
        else if (string.Equals(s.FromTokenAddress, "EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v", StringComparison.OrdinalIgnoreCase) &&
                 string.Equals(s.ToTokenAddress,   "So11111111111111111111111111111111111111112", StringComparison.OrdinalIgnoreCase) &&
                 s.ToTokenAmount > 0)
        {
            price = s.FromTokenAmount / s.ToTokenAmount;
        }

        if (price.HasValue)
        {
            _wsolUsdPriceHistory.Add(new SwapPricePoint
            {
                Timestamp = s.Timestamp,
                Price = price.Value
            });
        }
    }

    _wsolUsdPriceHistory = _wsolUsdPriceHistory
        .OrderBy(x => x.Timestamp)
        .ToList();
}

private decimal? GetClosestWsolUsdPrice(DateTime timestamp)
{
    if (_wsolUsdPriceHistory.Count == 0)
        return null;

    // Find point with minimal |t - timestamp|
    SwapPricePoint? best = null;
    var bestDiff = TimeSpan.MaxValue;

    foreach (var p in _wsolUsdPriceHistory)
    {
        var diff = (p.Timestamp - timestamp).Duration();
        if (diff < bestDiff)
        {
            bestDiff = diff;
            best = p;
        }
    }

    return best?.Price;
}


