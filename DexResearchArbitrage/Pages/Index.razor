        <MudTd DataLabel="Arbitration">
            @if (context.ArbitrationPriceUsd > 0)
            {
                @context.ArbitrationPriceUsd.ToString("F6")
            }
            else
            {
                <span>-</span>
            }
        </MudTd>
    </RowTemplate>
</MudTable>

        
        <!-- Total Records Info -->
        <MudPaper Class="pa-2 mt-2" Elevation="0">
            <MudText Typo="Typo.body2">
